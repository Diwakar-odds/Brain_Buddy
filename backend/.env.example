# Environment Variables for Brain Buddy Backend

# Database
DATABASE_URL=postgresql://localhost:5432/brain_buddy
# For development, you can use SQLite:
# DATABASE_URL=sqlite:///./brain_buddy.db

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Redis (for caching and Celery)
REDIS_URL=redis://localhost:6379/0

# AI Models
MODEL_CACHE_DIR=./models
DEVICE=cuda  # or cpu

# API
API_HOST=0.0.0.0
API_PORT=8000

# CORS
FRONTEND_URL=http://localhost:5173

# External APIs (for web scraping)
PUBMED_API_KEY=your-pubmed-api-key-optional

# Logging
LOG_LEVEL=INFO
